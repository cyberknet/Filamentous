@using Microsoft.Extensions.Localization
@inherits LayoutComponentBase
@inject IStringLocalizer<SharedResources> Localizer


<FluentLayout>
    <FluentHeader>
        @Localizer["Components_Layout_MainLayout_Header"]
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <CultureSelector />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body

                <FluentToastProvider />
                <FluentDialogProvider @rendermode="RenderMode.InteractiveServer"/>
                <FluentTooltipProvider />
                <FluentMessageBarProvider />
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    @Localizer["Components_Layout_MainLayout_UnhandledError"]
    <a href="" class="reload">@Localizer["Components_Layout_MainLayout_Reload"]</a>
    <a class="dismiss">🗙</a>
</div>

